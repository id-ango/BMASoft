@page "/AddIcItem"
@using BMASoft.Data.Models
@using System.ComponentModel.DataAnnotations
@inject BMASoft.Services.IInventoryService service
@inject NavigationManager navigationmanager

<div class="container">
    <div class="master">
        <h2>Add Produk</h2>

        <EditForm Model="@produk" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <br />
            <div class="form-group">
                <SfTextBox CssClass="e-outline" @bind-Value="@produk.ItemCode" Placeholder="Kode Item" FloatLabelType="FloatLabelType.Auto" style="text-transform:uppercase"></SfTextBox>

            </div>
            <div class="form-group">
                <SfTextBox CssClass="e-outline" @bind-Value="@produk.NamaItem" Placeholder="Nama Item" FloatLabelType="FloatLabelType.Auto"></SfTextBox>

            </div>
            <div class="form-group">
                <SfTextBox CssClass="e-outline" @bind-Value="@produk.Satuan" Placeholder="Satuan" FloatLabelType="FloatLabelType.Auto"></SfTextBox>

            </div>
            

            <div class="float-md-right">
                <SfButton CssClass="e-primary" IconCss="e-icons e-save-icon" Type="submit">Simpan</SfButton>
            </div>


        </EditForm>

    </div>
</div>

@code{

    IcItemView produk = new IcItemView();

    private async Task HandleValidSubmit()
    {

        var newEdit = await service.AddIcItem(produk);
        if (newEdit)
        {
            //   await ExportToPdf(Transh);
        }

        navigationmanager.NavigateTo("SetupIcItem", false);

