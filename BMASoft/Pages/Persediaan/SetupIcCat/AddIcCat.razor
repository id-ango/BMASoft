@page "/AddIcCat"
@using BMASoft.Data.Models
@using System.ComponentModel.DataAnnotations
@inject BMASoft.Services.IInventoryService service
@inject BMASoft.Services.ILedgerService serviceGl
@inject NavigationManager navigationmanager
@using Newtonsoft.Json

<div class="container">
    <div class="master">
        <a href="/SetupIcCat">Back</a>

        <h2>Tambah Kategory</h2>

        <EditForm Model="@supplier" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <br />
            <div class="form-group">
                <SfTextBox CssClass="e-outline" @bind-Value="@supplier.CatCode" Placeholder="Kategori Kode" FloatLabelType="FloatLabelType.Auto" style="text-transform:uppercase"></SfTextBox>

            </div>
            <div class="form-group">
                <SfTextBox CssClass="e-outline" @bind-Value="@supplier.Description" Placeholder="Keterangan" FloatLabelType="FloatLabelType.Auto"></SfTextBox>

            </div>
            <div class="form-group">
                <SfComboBox TValue="string" TItem="GlAccount" DataSource="GlAccounts" Placeholder="Payable Control" FloatLabelType="FloatLabelType.Auto" @bind-Value="@supplier.Cat1">
                    <DropDownListEvents TValue="string" ValueChange="OnChangeAkun"></DropDownListEvents>
                    <ComboBoxFieldSettings Text="NamaLengkap" Value="GlAcct"></ComboBoxFieldSettings>
                </SfComboBox>
                <ValidationMessage For="@(() => supplier.Cat1)" />
            </div>

            <div class="form-group">
                <SfComboBox TValue="string" TItem="GlAccount" DataSource="GlAccounts" Placeholder="Payment Disc" FloatLabelType="FloatLabelType.Auto" @bind-Value="@supplier.Cat2">
                    <DropDownListEvents TValue="string"></DropDownListEvents>
                    <ComboBoxFieldSettings Text="NamaLengkap" Value="GlAcct"></ComboBoxFieldSettings>
                </SfComboBox>
                <ValidationMessage For="@(() => supplier.Cat2)" />
            </div>
            <div class="form-group">
                <SfComboBox TValue="string" TItem="GlAccount" DataSource="GlAccounts" Placeholder="Tax" FloatLabelType="FloatLabelType.Auto" @bind-Value="@supplier.Cat3">
                    <DropDownListEvents TValue="string"></DropDownListEvents>
                    <ComboBoxFieldSettings Text="NamaLengkap" Value="GlAcct"></ComboBoxFieldSettings>
                </SfComboBox>
                <ValidationMessage For="@(() => supplier.Cat3)" />
            </div>


            <div class="float-md-right">
                <SfButton CssClass="e-primary" IconCss="e-icons e-save-icon" Type="submit">Simpan</SfButton>
            </div>


        </EditForm>

    </div>
</div>

@code{


    IcCatView supplier = new IcCatView();
    private List<GlAccount> GlAccounts;

    public int GlAccountId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Transh.Tanggal = DateTime.Now;

        await LoadGlAccounts();

    }

    private async Task HandleValidSubmit()
    {

        var newEdit = await service.AddIcCat(supplier);
        if (newEdit)
        {
            //   await ExportToPdf(Transh);
        }

        navigationmanager.NavigateTo("SetupIcCat", false);

        //add = !add;
        //StateHasChanged();

    }

    public void OnChangeAkun(Syncfusion.Blazor.DropDowns.ChangeEventArgs<string> args)
    {
        var itemData = JsonConvert.DeserializeObject<GlAccount>(args.ItemData != null ? args.ItemData.ToString() : "");
        this.GlAccountId = itemData.GlAccountId;

    }

    async Task LoadGlAccounts()
    {
        GlAccounts = await serviceGl.GetGlAccount();
    }
}