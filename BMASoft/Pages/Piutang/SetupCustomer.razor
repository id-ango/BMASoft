@page "/SetupCustomer"
@using BMASoft.Data.Models
@using System.ComponentModel.DataAnnotations
@inject BMASoft.Services.IReceivableService service

<style>
    .e-edit-icon::before {
        content: '\ea9a';
    }

    .e-delete-icon::before {
        content: '\e94a';
    }
</style>


@if (true)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <h1>Setup Customer</h1>
                <SfButton @onclick="Tambah" CssClass="e-primary">Add</SfButton>

                <br />
                <br />
            </div>
            <div class="col-md-6">

                <CascadingValue Name="TambahCustomer" Value="customer">
                    <CascadingValue Name="EditCustomer" Value="Rubahcustomer">
                        <FieldCustomer cekStatus="status" tombol="TblButton" Simpan="simpan"></FieldCustomer>
                    </CascadingValue>
                </CascadingValue>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        @if (toDoList == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {

            <SfGrid DataSource="@toDoList" AllowGrouping="true" AllowSorting="true" Width="auto" Height="310" Toolbar="@(new List<string>() {"Print", "Search" })">

                <GridColumns>

                    <GridColumn HeaderText="" Width="50">
                        <Template>
                            @{
                                var trans2 = (context as ArCust);

                                <SfButton CssClass="e-small e-success" IconCss="e-icons e-edit-icon" @onclick="(() => Rubah(trans2))"></SfButton>
                                <SfButton CssClass="e-small e-danger" IconCss="e-icons e-delete-icon" @onclick="(() => Hapus(trans2))"></SfButton>

                            }

                        </Template>

                    </GridColumn>
                    <GridColumn Field=@nameof(ArCust.Customer) HeaderText="Kode" Width="30"></GridColumn>
                    <GridColumn Field=@nameof(ArCust.NamaCust) HeaderText="Nama" Width="70"></GridColumn>
                    <GridColumn Field=@nameof(ArCust.Alamat) HeaderText=" Alamat" Width="170"></GridColumn>
                    <GridColumn Field=@nameof(ArCust.Kota) HeaderText="Kota" Width="100"></GridColumn>
                    <GridColumn Field=@nameof(ArCust.Telpon) HeaderText="Telpon" Width="70"></GridColumn>

                </GridColumns>
            </SfGrid>
        }
    </div>
}


@code {

    private List<ArCust> toDoList;
    private bool TblButton { get; set; } = true;


    private int status { get; set; }

    CustomerView customer = new CustomerView();
    CustomerView Rubahcustomer = new CustomerView();


    protected override void OnInitialized()
    {

         LoadCustomer();

    }

    void LoadCustomer()
    {
        toDoList =  service.GetCustomer();
    }

    private void simpan(bool jadisimpan)
    {
        TblButton = jadisimpan;
        Tambah();

    }

    private  void Tambah()
    {
        status = 1;
        TblButton = !TblButton;
        LoadCustomer();
        StateHasChanged();
    }
    private void Rubah(ArCust xCustomer)
    {
        Rubahcustomer.ArCustId = xCustomer.ArCustId;
        Rubahcustomer.Customer = xCustomer.Customer;
        Rubahcustomer.NamaCust = xCustomer.NamaCust;
        Rubahcustomer.Alamat = xCustomer.Alamat;
        Rubahcustomer.Kota = xCustomer.Kota;
        Rubahcustomer.Telpon = xCustomer.Telpon;

        status = 2;
        TblButton = !TblButton;
        LoadCustomer();
        StateHasChanged();

    }

    private void Hapus(ArCust xCustomer)
    {
        Rubahcustomer.ArCustId = xCustomer.ArCustId;
        Rubahcustomer.Customer = xCustomer.Customer;
        Rubahcustomer.NamaCust = xCustomer.NamaCust;
        Rubahcustomer.Alamat = xCustomer.Alamat;
        Rubahcustomer.Kota = xCustomer.Kota;
        Rubahcustomer.Telpon = xCustomer.Telpon;

        status = 3;
        TblButton = !TblButton;
        LoadCustomer();
        StateHasChanged();
    }


}