@page "/SetupArAkunSet"
@using BMASoft.Data.Models
@using System.ComponentModel.DataAnnotations
@inject BMASoft.Services.IReceivableService service

<style>
    .e-edit-icon::before {
        content: '\ea9a';
    }

    .e-delete-icon::before {
        content: '\e94a';
    }
</style>


@if (true)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <h1>Setup Account Set</h1>
                <SfButton @onclick="Tambah" CssClass="e-primary">Add</SfButton>

                <br />
                <br />
            </div>
            <div class="col-md-6">

                <CascadingValue Name="TambahAcct" Value="acctset">
                    <CascadingValue Name="EditAcct" Value="Rubahacctsets">
                        <FieldArAkunSet cekStatus="status" tombol="TblButton" Simpan="simpan"></FieldArAkunSet>
                    </CascadingValue>
                </CascadingValue>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        @if (toDoList == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {

            <SfGrid DataSource="@toDoList" AllowGrouping="true" AllowSorting="true" Width="auto" Height="310" Toolbar="@(new List<string>() {"Print", "Search" })">

                <GridColumns>

                    <GridColumn HeaderText="" Width="80">
                        <Template>
                            @{
                                var trans2 = (context as ArAcct);

                                <SfButton CssClass="e-small e-success" IconCss="e-icons e-edit-icon" @onclick="(() => Rubah(trans2))"></SfButton>
                                <SfButton CssClass="e-small e-danger" IconCss="e-icons e-delete-icon" @onclick="(() => Hapus(trans2))"></SfButton>

                            }

                        </Template>

                    </GridColumn>
                    <GridColumn Field=@nameof(ArAcct.AcctSet) HeaderText="Kode" Width="60"></GridColumn>
                    <GridColumn Field=@nameof(ArAcct.Description) HeaderText="Nama" Width="170"></GridColumn>
                    <GridColumn Field=@nameof(ArAcct.Acct1) HeaderText="AR Control" Width="70"></GridColumn>
                    <GridColumn Field=@nameof(ArAcct.Acct2) HeaderText="Sales" Width="70"></GridColumn>

                </GridColumns>
            </SfGrid>
        }
    </div>
}


@code {

    private List<ArAcct> toDoList;
    private bool TblButton { get; set; } = true;


    private int status { get; set; }

    ArAcctView acctset = new ArAcctView();
    ArAcctView Rubahacctsets = new ArAcctView();


    protected override async Task OnInitializedAsync()
    {

        await LoadArAkunSet();

    }

    async Task LoadArAkunSet()
    {
        toDoList = await service.GetArAkunSet();
    }

    private void simpan(bool jadisimpan)
    {
        TblButton = jadisimpan;
        Tambah();

    }

    private async void Tambah()
    {
        status = 1;
        TblButton = !TblButton;
        await LoadArAkunSet();
        StateHasChanged();
    }
    private async void Rubah(ArAcct xAcctSet)
    {
        Rubahacctsets.ArAcctId = xAcctSet.ArAcctId;
        Rubahacctsets.Description = xAcctSet.Description;
        Rubahacctsets.Acct1 = xAcctSet.Acct1;

        status = 2;
        TblButton = !TblButton;
        await LoadArAkunSet();
        StateHasChanged();

    }

    private async void Hapus(ArAcct xAcctSet)
    {
        Rubahacctsets.ArAcctId = xAcctSet.ArAcctId;
        Rubahacctsets.Description = xAcctSet.Description;
        Rubahacctsets.Acct1 = xAcctSet.Acct1;

        status = 3;
        TblButton = !TblButton;
        await LoadArAkunSet();
        StateHasChanged();
    }


}